# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=area_user
POSTGRES_PASSWORD=area_password
POSTGRES_DB=area_db

# Application Configuration
SERVER_URL="http://127.0.0.1:8080"
PORT=8080
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Security Configuration
BCRYPT_SALT_ROUNDS=10

# Discord OAuth2 Configuration (for user authentication)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret
# Discord Bot Configuration (required for Discord REActions)
DISCORD_BOT_TOKEN=your-discord-bot-token

# GitHub OAuth2 Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
# Spotify OAuth2 Configuration
SPOTIFY_CLIENT_ID=your-spotify-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Twitch OAuth2 Configuration
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret

# Email Configuration
SMTP_USER=areaservicemail@gmail.com
SMTP_PASS=your-email-password

# Android App Links
ANDROID_PACKAGE_NAME=com.example.area
ANDROID_SHA256_FINGERPRINT=YOUR:SHA256:FINGERPRINT:HERE

# iOS App Links
IOS_TEAM_ID=YOUR_IOS_TEAM_ID
IOS_BUNDLE_ID=YOUR_IOS_BUNDLE_ID

# Redirect URIs
WEB_AUTH_REDIRECT_URI="http://localhost:8081/auth/callback"
MOBILE_AUTH_REDIRECT_URI="http://localhost:8080/auth/callback"
MOBILE_APP_AUTH_URL_SCHEME="area://auth/callback"
WEB_SERVICE_REDIRECT_URI="http://localhost:8081/service/callback"
MOBILE_SERVICE_REDIRECT_URI="http://localhost:8080/service/callback"
MOBILE_APP_SERVICE_URL_SCHEME="area://service/callback"
SMTP_PASS=who-knows-what

# Twitch Configuration
TWITCH_CLIENT_ID=your-twitch-client-id
TWITCH_CLIENT_SECRET=your-twitch-client-secret
TWITCH_REDIRECT_URI=http://localhost:8081/auth/twitch/callback
